@model SISCOMBUST.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h5>
        </div>
        <div class="card-body bg-light">
            <p class="text-muted">¿Seguro que deseas eliminar este usuario? Esta acción no se puede deshacer.</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre Completo:</dt>
                <dd class="col-sm-9">@Model.NombreCompleto</dd>

                <dt class="col-sm-3 fw-bold">Usuario:</dt>
                <dd class="col-sm-9">@Model.NombreUsuario</dd>

                <dt class="col-sm-3 fw-bold">Rol:</dt>
                <dd class="col-sm-9">@Model.Rol</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUsuario" />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2"><i class="bi bi-arrow-left"></i> Cancelar</a>
                    <button type="submit" class="btn text-white fw-bold" style="background-color:#C8102E;">
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
