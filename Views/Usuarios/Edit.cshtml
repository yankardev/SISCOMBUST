@model SISCOMBUST.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Usuario</h5>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Edit">
                <input type="hidden" asp-for="IdUsuario" />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NombreCompleto" class="form-label fw-bold"></label>
                        <input asp-for="NombreCompleto" class="form-control" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NombreUsuario" class="form-label fw-bold"></label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label fw-bold"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Rol" class="form-label fw-bold"></label>
                        <select asp-for="Rol" class="form-select">
                            <option>Administrador</option>
                            <option>Supervisor</option>
                            <option>Logística</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2"><i class="bi bi-arrow-left"></i> Cancelar</a>
                    <button type="submit" class="btn text-white fw-bold" style="background-color:#C8102E;">
                        <i class="bi bi-check-circle-fill"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
