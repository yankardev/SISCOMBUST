@model IEnumerable<SISCOMBUST.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container mt-4">

    <!-- ENCABEZADO -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-danger mb-0">
                <i class="bi bi-people-fill"></i> Gestión de Usuarios
            </h3>
            <small class="text-muted">Administra los usuarios del sistema SISCOMBUST</small>
        </div>
        <a asp-action="Create" class="btn text-white fw-bold shadow-sm px-4" style="background-color:#C8102E;">
            <i class="bi bi-person-plus"></i> Nuevo Usuario
        </a>
    </div>

    <!-- TARJETAS RESUMEN -->
    <div class="card border-0">
    <div class="row g-3 mb-4 text-center">
        <div class="col-6 col-md-3 col-lg-2">
            <div class="card border-0 shadow-sm h-100 resumen-card">
                <div class="card-body">
                    <i class="bi bi-person-check-fill fs-2 text-danger"></i>
                    <h6 class="fw-bold mt-2 text-secondary">Usuarios</h6>
                    <h4 class="fw-bold text-dark">@Model.Count()</h4>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 col-lg-2">
            <div class="card border-0 shadow-sm h-100 resumen-card">
                <div class="card-body">
                    <i class="bi bi-shield-lock-fill fs-2 text-danger"></i>
                    <h6 class="fw-bold mt-2 text-secondary">Admins</h6>
                    <h4 class="fw-bold text-dark">@Model.Count(u => u.Rol == "Administrador")</h4>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 col-lg-2">
            <div class="card border-0 shadow-sm h-100 resumen-card">
                <div class="card-body">
                    <i class="bi bi-briefcase-fill fs-2 text-danger"></i>
                    <h6 class="fw-bold mt-2 text-secondary">Supervisores</h6>
                    <h4 class="fw-bold text-dark">@Model.Count(u => u.Rol == "Supervisor")</h4>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 col-lg-2">
            <div class="card border-0 shadow-sm h-100 resumen-card">
                <div class="card-body">
                    <i class="bi bi-truck fs-2 text-danger"></i>
                    <h6 class="fw-bold mt-2 text-secondary">Logística</h6>
                    <h4 class="fw-bold text-dark">@Model.Count(u => u.Rol == "Logística")</h4>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 col-lg-2">
            <div class="card border-0 shadow-sm h-100 resumen-card">
                <div class="card-body">
                    <i class="bi bi-gear-fill fs-2 text-danger"></i>
                    <h6 class="fw-bold mt-2 text-secondary">Operarios</h6>
                    <h4 class="fw-bold text-dark">@Model.Count(u => u.Rol == "Operario")</h4>
                </div>
            </div>
        </div>
    </div>
    </div>

    <!-- TABLA DE USUARIOS -->
    <div class="card shadow border-0">
        <div class="card-header text-white fw-bold d-flex align-items-center" style="background-color:#C8102E;">
            <i class="bi bi-list-ul me-2 fs-5"></i> Lista de Usuarios
        </div>
        <div class="card-body bg-light">
            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm mb-0">
                    <thead class="text-white" style="background-color:#C8102E;">
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@user.NombreCompleto</td>
                                    <td>@user.NombreUsuario</td>
                                    <td>
                                        <span class="badge rounded-pill px-3 py-2 fs-6
                                                    @(user.Rol == "Administrador" ? "bg-danger" :
                                                                                            user.Rol == "Supervisor" ? "bg-warning text-dark" :
                                                                                            user.Rol == "Logística" ? "bg-info text-dark" :
                                                                                            "bg-secondary")">
                                    @user.Rol
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@user.IdUsuario" class="btn btn-outline-warning btn-sm mx-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@user.IdUsuario" class="btn btn-outline-info btn-sm mx-1" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.IdUsuario" class="btn btn-outline-danger btn-sm mx-1" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                                                }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">
                                    <i class="bi bi-exclamation-circle"></i> No hay usuarios registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Tarjetas con animación */
    .resumen-card {
        transition: all 0.3s ease;
    }

        .resumen-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(200, 16, 46, 0.3);
        }

    table thead th {
        font-weight: 600;
        letter-spacing: 0.3px;
    }

    table tbody tr:hover {
        background-color: #fff4f4;
        transition: background 0.2s ease;
    }
</style>
