@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Iniciar Sesión - SISCOMBUST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        body {
            background: linear-gradient(135deg, #C8102E 0%, #8B0A1A 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            width: 400px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            padding: 2.5rem;
            animation: fadeIn 0.6s ease-in-out;
        }

        .login-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .login-header i {
                font-size: 3rem;
                color: #C8102E;
            }

            .login-header h4 {
                font-weight: bold;
                color: #C8102E;
            }

        .form-control:focus {
            border-color: #C8102E;
            box-shadow: 0 0 0 0.15rem rgba(200, 16, 46, 0.25);
        }

        .btn-danger {
            background-color: #C8102E;
            border: none;
            transition: background 0.3s;
        }

            .btn-danger:hover {
                background-color: #A50E24;
            }

        .alert-danger {
            font-size: 0.9rem;
            border-radius: 10px;
            margin-top: 10px;
        }

        footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.85rem;
            color: #999;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>

<body>
    <div class="login-card">
        <div class="login-header">
            <i class="bi bi-fuel-pump-fill"></i>
            <h4>SISCOMBUST</h4>
            <p class="text-muted">Sistema de gestión de combustible</p>
        </div>

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label fw-semibold">Usuario</label>
                <input type="text" name="usuarioLogin" class="form-control" placeholder="Ingrese su usuario" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Contraseña</label>
                <input type="password" name="clave" class="form-control" placeholder="Ingrese su contraseña" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger py-2 text-center">
                    <i class="bi bi-exclamation-circle-fill"></i> @ViewBag.Error
                </div>
            }

            <button type="submit" class="btn btn-danger w-100 fw-bold mt-3">
                <i class="bi bi-box-arrow-in-right"></i> Ingresar
            </button>
        </form>

        <footer>
            © @DateTime.Now.Year Transportes Rodrigo Carranza S.A.C.
        </footer>
    </div>
</body>
</html>
