@model SISCOMBUST.Models.SolicitudCompra
@{
    ViewData["Title"] = "Detalle de Solicitud";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h4 class="mb-0"><i class="bi bi-eye"></i> Detalle de Solicitud</h4>
        </div>

        <div class="card-body bg-light">
            <dl class="row">
                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.FechaSolicitud.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Proveedor</dt>
                <dd class="col-sm-9">@Model.Proveedor?.NombreProveedor</dd>

                <dt class="col-sm-3">Galones Solicitados</dt>
                <dd class="col-sm-9">@Model.GalonesSolicitados</dd>

                <dt class="col-sm-3">Precio Referencial</dt>
                <dd class="col-sm-9">@Model.PrecioReferencial</dd>

                <dt class="col-sm-3">Monto Estimado</dt>
                <dd class="col-sm-9 fw-bold text-success">@Model.MontoEstimado.ToString("N2")</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Estado == "Aprobado")
                    {
                        <span class="badge bg-success">@Model.Estado</span>
                    }
                    else if (Model.Estado == "Rechazado")
                    {
                        <span class="badge bg-danger">@Model.Estado</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@Model.Estado</span>
                    }
                </dd>

                <dt class="col-sm-3">Solicitante</dt>
                <dd class="col-sm-9">@Model.Solicitante</dd>

                <dt class="col-sm-3">Observaciones</dt>
                <dd class="col-sm-9">@Model.Observacion</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.IdSolicitud" class="btn btn-outline-warning"><i class="bi bi-pencil"></i> Editar</a>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left-circle"></i> Volver</a>
        </div>
    </div>
</div>
