@model SISCOMBUST.Models.SolicitudCompra
@{
    ViewData["Title"] = "Registrar Solicitud de Compra";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h4 class="mb-0"><i class="bi bi-file-earmark-plus"></i> Registrar Solicitud de Compra</h4>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Create" id="formSolicitud">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="FechaSolicitud" class="form-label fw-bold"></label>
                        <input asp-for="FechaSolicitud" class="form-control" type="date" />
                        <span asp-validation-for="FechaSolicitud" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="IdProveedor" class="form-label fw-bold"></label>
                        <select asp-for="IdProveedor" class="form-select" asp-items="ViewBag.IdProveedor">
                            <option value="">-- Seleccione un proveedor --</option>
                        </select>
                        <span asp-validation-for="IdProveedor" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Solicitante" class="form-label fw-bold"></label>
                        <input asp-for="Solicitante" class="form-control" placeholder="Nombre del solicitante" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="GalonesSolicitados" class="form-label fw-bold"></label>
                        <input asp-for="GalonesSolicitados" class="form-control" id="galonesInput" />
                        <span asp-validation-for="GalonesSolicitados" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="PrecioReferencial" class="form-label fw-bold"></label>
                        <input asp-for="PrecioReferencial" class="form-control" id="precioInput" />
                        <span asp-validation-for="PrecioReferencial" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold">Monto Estimado</label>
                        <input type="text" class="form-control bg-white" id="montoEstimado" readonly />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Observacion" class="form-label fw-bold"></label>
                        <textarea asp-for="Observacion" class="form-control" placeholder="Observaciones adicionales..."></textarea>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left-circle"></i> Volver</a>
                    <button type="submit" class="btn text-white fw-bold" style="background-color:#C8102E;">
                        <i class="bi bi-save"></i> Guardar Solicitud
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const galones = document.getElementById("galonesInput");
        const precio = document.getElementById("precioInput");
        const monto = document.getElementById("montoEstimado");

        function calcularMonto() {
            const g = parseFloat(galones.value) || 0;
            const p = parseFloat(precio.value) || 0;
            monto.value = (g * p).toFixed(2);
        }

        galones.addEventListener("input", calcularMonto);
        precio.addEventListener("input", calcularMonto);
    </script>
}
