@model SISCOMBUST.Models.Compra

@{
    ViewData["Title"] = "Detalle de Compra";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white" style="background:linear-gradient(90deg,#8B0000,#C8102E);">
            <h4 class="mb-0"><i class="bi bi-receipt"></i> Detalle de la Compra</h4>
        </div>
        <div class="card-body bg-light p-4">
            <dl class="row">
                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.FechaCompra.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Proveedor</dt>
                <dd class="col-sm-9">@Model.Proveedor?.NombreProveedor</dd>

                <dt class="col-sm-3">Galones Comprados</dt>
                <dd class="col-sm-9">@Model.GalonesComprados</dd>

                <dt class="col-sm-3">Precio por Galón</dt>
                <dd class="col-sm-9">S/ @Model.PrecioPorGalon</dd>

                <dt class="col-sm-3">Monto Total</dt>
                <dd class="col-sm-9 fw-bold text-danger">S/ @Model.MontoTotal.ToString("N2")</dd>

                <dt class="col-sm-3">Factura</dt>
                <dd class="col-sm-9">@Model.NumeroFactura</dd>

                <dt class="col-sm-3">Observación</dt>
                <dd class="col-sm-9">@Model.Observacion</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
                <a asp-action="Edit" asp-route-id="@Model.IdCompra" class="btn text-white fw-bold" style="background-color:#C8102E;">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
