@model SISCOMBUST.Models.Compra

@{
    ViewData["Title"] = "Eliminar Compra";
}

<div class="container mt-5">
    <div class="card border-danger shadow-lg rounded-4">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body bg-light p-4">
            <p class="text-danger fw-bold">¿Está seguro de eliminar esta compra?</p>
            <ul>
                <li><strong>Proveedor:</strong> @Model.Proveedor?.NombreProveedor</li>
                <li><strong>Galones:</strong> @Model.GalonesComprados</li>
                <li><strong>Monto Total:</strong> S/ @Model.MontoTotal</li>
            </ul>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdCompra" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
                    <button type="submit" class="btn text-white fw-bold" style="background-color:#C8102E;">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
