@model SISCOMBUST.Models.Proveedor

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h4 class="mb-0"><i class="bi bi-eye-fill"></i> Detalles del Proveedor</h4>
        </div>

        <div class="card-body bg-light">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold text-danger">Nombre del Proveedor:</label>
                    <p class="form-control-plaintext bg-white border rounded px-3 py-2">@Model.NombreProveedor</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold text-danger">RUC:</label>
                    <p class="form-control-plaintext bg-white border rounded px-3 py-2">@Model.RUC</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold text-danger">Teléfono:</label>
                    <p class="form-control-plaintext bg-white border rounded px-3 py-2">@Model.Telefono</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold text-danger">Correo Electrónico:</label>
                    <p class="form-control-plaintext bg-white border rounded px-3 py-2">@Model.Correo</p>
                </div>
            </div>

            <div class="mt-4 text-end">
                <a asp-action="Edit" asp-route-id="@Model.IdProveedor"
                   class="btn text-white fw-bold me-2"
                   style="background-color:#C8102E;"
                   data-bs-toggle="tooltip" title="Editar proveedor">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>

                <a asp-action="Index" class="btn btn-outline-secondary fw-bold"
                   data-bs-toggle="tooltip" title="Volver a la lista de proveedores">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
