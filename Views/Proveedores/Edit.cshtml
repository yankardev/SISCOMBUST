@model SISCOMBUST.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header text-white" style="background-color:#C8102E;">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Información del Proveedor</h4>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="IdProveedor" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NombreProveedor" class="form-label fw-bold text-danger">Nombre del Proveedor</label>
                        <input asp-for="NombreProveedor" class="form-control shadow-sm" />
                        <span asp-validation-for="NombreProveedor" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RUC" class="form-label fw-bold text-danger">RUC</label>
                        <input asp-for="RUC" class="form-control shadow-sm" />
                        <span asp-validation-for="RUC" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-bold text-danger">Teléfono</label>
                        <input asp-for="Telefono" class="form-control shadow-sm" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-bold text-danger">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control shadow-sm" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn text-white fw-bold me-2"
                            style="background-color:#C8102E;"
                            data-bs-toggle="tooltip" title="Guardar cambios del proveedor">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary fw-bold"
                       data-bs-toggle="tooltip" title="Volver a la lista de proveedores">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
